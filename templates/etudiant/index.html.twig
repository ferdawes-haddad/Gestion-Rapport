{% extends 'base.html.twig' %}

{% block title %}Hello EtudiantController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 0em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    thead {color:indianred;}
    tbody {color:black;}
    tfoot {color:red;}
</style>
<div class="example-wrapper">
    <h1  style="align-items: center">List Etudiant </h1>

    <table class="table">
        <thead>
        <tr>
            <th><div class="form-check" >Nom</div></th>
            <th><div class="form-check" >Prenom</div></th>
            <th><div class="form-check" >Mail</div></th>
            <th><div class="form-check" ></div>></th>
        </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td><div class="form-check">{{ etudiant.nom }}</div></td>
                <td><div class="form-check">{{ etudiant.prenom }}</div></td>
                <td><div class="form-check">{{ etudiant.mail }}</div></td>
                <td>
                    <div class="form-check">
                    <a href="{{ path('etudiant_show', {'id': etudiant.id}) }}" class="glyphicon glyphicon-list"></a>
                    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}" class="glyphicon glyphicon-edit"></a>
                    <a>{{ include('etudiant/_delete_form.html.twig') }}    </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    <a href="{{ path('etudiant_new') }}" class="btn btn-default " style="background: antiquewhite">Ajouter un etudiant</a>
{% endblock %}
