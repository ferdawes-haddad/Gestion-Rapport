<form method="post" action="{{ path('etudiant_delete', {'id': etudiant.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etudiant.id) }}">
    <button class="glyphicon glyphicon-trash" ></button>
</form>
