{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: auto; max-width: 500px; width: 10%; font: 20px/1.5 sans-serif; }
        .example-wrapper code { background: #d2959b; padding: 2px 6px; }
    </style>
    <h1>Etudiant</h1>

    <div class="form">

                <div class="form-group">
                    <b>Nom</b>
                    {{ etudiant.nom }}
                </div>

                <div class="form-group">
                    <b>Prenom</b>
                    {{ etudiant.prenom }}
                </div>

                <div class="form-group">
                    <b>Mail</b>
                    {{ etudiant.mail }}
                </div>

    </div>


    <a href="{{ path('etudiant_index') }}"class="btn btn-default glyphicon glyphicon-list" style="background: #5eb5e0"></a>

    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}"class="btn btn-default glyphicon glyphicon-edit" style="background: #5eb5e0"></a>

    {{ include('etudiant/_delete_form.html.twig') }}
{% endblock %}
