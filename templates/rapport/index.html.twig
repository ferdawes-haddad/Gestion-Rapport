{% extends 'base.html.twig' %}

{% block title %}Rapport index{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class=" example-wrapper" >
    <div class="dashboard-headline">

    <table class="table"  >
        <thead>
            <tr>
                <th><div class="form-check" >Titre</div></th>
                <th><div class="form-check">Description</div></th>
                <th><div class="form-check"></div></th>
            </tr>
        </thead>
        <tbody>
        {% for rapport in rapports %}
            <tr>
                <td><div class="form-check"> {{ rapport.titre }}</div></td>
                <td ><div class="form-check"> {{ rapport.description }}</div></td>
                <td ><div class="form-check">
                    <a href="{{ path('rapport_show', {'id': rapport.id}) }}" class="glyphicon glyphicon-list"></a>
                    <a href="{{ path('rapport_edit', {'id': rapport.id}) }}" class="glyphicon glyphicon-edit"></a></div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>

    <a href="{{ path('rapport_new') }}" class="btn btn-default " style="background: antiquewhite">Ajouter un rapport</a>
{% endblock %}
