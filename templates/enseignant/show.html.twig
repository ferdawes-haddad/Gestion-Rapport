{% extends 'base.html.twig' %}

{% block title %}Enseignant{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: auto; max-width: 500px; width: 10%; font: 20px/1.5 sans-serif; }
        .example-wrapper code { background: #d2959b; padding: 2px 6px; }
    </style>

    <h1>Enseignant</h1>


    <div class="form">

        <div class="form-group">
            <b>Nom</b>
            {{ enseignant.nom }}
        </div>

        <div class="form-group">
            <b>Prenom</b>
            {{ enseignant.prenom }}
        </div>

        <div class="form-group">
            <b>Mail</b>
            {{ enseignant.mail }}
        </div>

    </div>


    <a href="{{ path('enseignant_index') }}"class="btn btn-default glyphicon glyphicon-list" style="background: #5eb5e0"></a>

    <a href="{{ path('enseignant_edit', {'id': enseignant.id}) }}"class="btn btn-default glyphicon glyphicon-edit" style="background: #5eb5e0"></a>

    {{ include('enseignant/_delete_form.html.twig') }}
{% endblock %}
