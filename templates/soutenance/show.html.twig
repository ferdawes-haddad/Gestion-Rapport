{% extends 'base.html.twig' %}

{% block title %}Soutenance{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: auto; max-width: 500px; width: 10%; font: 20px/1.5 sans-serif; }
        .example-wrapper code { background: #d2959b; padding: 2px 6px; }
    </style>
    <h1>Soutenance</h1>

    <div class="form wrapper">
    <table class="table">
        <tbody>
        <tr>
            <div class="form-group"><th>Date</th></div>
            <div class="form-group"><td>{{ soutenance.date ? soutenance.date|date('Y-m-d') : '' }}</td></div>
        </tr>
        <tr>
            <div class="form-group"><th>Role</th></div>
            <div class="form-group"><td>{{ soutenance.role }}</td></div>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('soutenance_index') }}"class="btn btn-default glyphicon glyphicon-list" style="background: #5eb5e0"></a>
    <a href="{{ path('soutenance_edit', {'id': soutenance.id}) }}" class="btn btn-default glyphicon glyphicon-edit" style="background: #5eb5e0"></a>
    <a>{{ include('soutenance/_delete_form.html.twig') }}</a>
{% endblock %}