{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 1100px; width: 200%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        thead {color:indianred;}
        tbody {color:black;}
        tfoot {color:red;}
    </style>

    <div class="example-wrapper">

        <div class="transformation">
            <div class="table-responsive ">
                <table class="table table-shopping">

                    <thead>
                    <tr>
                        <th class="form-check">Date</th>
                        <th class="form-check">Encadreur</th>
                        <th class="form-check">Raporteur</th>
                        <th class="form-check">President</th>
                        <th class="form-check">Etudiant</th>
                        <th><div class="form-check"></div></th>
                        <th><div class="form-check"></div></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for soutenance in soutenances %}
                        <tr>
                            <td class="form-check">{{ soutenance.date ? soutenance.date|date('Y-m-d') : '' }}</td>
                            <td class="form-check">{{ soutenance.encadrer.mail }}</td>
                            <td class="form-check">{{ soutenance.raporteur.mail }}</td>
                            <td class="form-check">{{ soutenance.president.mail }}</td>
                            <td class="form-check">{{ soutenance.etudiant.mail }}</td>
                            <td><div class="form-check">
                                    <a href="{{ path('soutenance_edit', {'id': soutenance.id}) }}" class="glyphicon glyphicon-edit"></a>
                                    <a>{{ include('soutenance/_delete_form.html.twig') }}    </a>
                            </div></td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
{% endblock %}