<form method="post" action="{{ path('admin_delete', {'id': admin.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin.id) }}">
    <button class="btn btn-default glyphicon glyphicon-trash" style="background: #f6f6f6"></button>
</form>
