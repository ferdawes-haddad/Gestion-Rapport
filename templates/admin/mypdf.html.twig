{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}

<div class="wrapper">
    <div class="dashboard-headline">
    <div class="table-responsive ">
        <table class="table table-shopping">

        <thead>
        <tr>
            <th class="text-center">Document</th>
            <th class="text-center">DateDepos</th>
        </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td class="text-center">{{ admin.document }}</td>
                <td class="text-center">{{ admin.dateDepos ? admin.dateDepos|date('Y-m-d H:i:s') : '' }}</td>
                <td class="text-center">
                    <a href="{{ path('admin_show', {'id': admin.id}) }}">show</a>
                    <a href="{{ path('admin_edit', {'id': admin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
    </div>
        <a href="{{ path('admin_new') }}">Ajouter</a>
    </div>
</div>



{% endblock %}
