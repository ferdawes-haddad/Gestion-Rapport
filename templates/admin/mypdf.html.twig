{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <h1>Admin index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Document</th>
            <th>DateDepos</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for admin in admin %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.document }}</td>
                <td>{{ admin.dateDepos ? admin.dateDepos|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_show', {'id': admin.id}) }}">show</a>
                    <a href="{{ path('admin_edit', {'id': admin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_new') }}">Create new</a>
{% endblock %}
